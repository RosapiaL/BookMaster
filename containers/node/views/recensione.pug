doctype html
head
  meta(charset='utf-8')
  title Star Rating Form | CodingNepal
  link(rel='stylesheet' href='./stylesheets/recensione.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
.container
  .post
    .text Thanks for rating us!
    .edit EDIT
  .star-widget
    input#rate-5(onclick='replace_with_valuestar()' type='radio' name='rate' value='5')
    label.fas.fa-star(for='rate-5')
    input#rate-4(onclick='replace_with_valuestar()' type='radio' name='rate' value='4')
    label.fas.fa-star(for='rate-4')
    input#rate-3(onclick='replace_with_valuestar()' type='radio' name='rate' value='3')
    label.fas.fa-star(for='rate-3')
    input#rate-2(onclick='replace_with_valuestar()' type='radio' name='rate' value='2')
    label.fas.fa-star(for='rate-2')
    input#rate-1(onclick='replace_with_valuestar()' type='radio' name='rate' value='1')
    label.fas.fa-star(for='rate-1')
    form(method='post' action="recensione")
      header
      .textarea
        textarea(cols='30' name="review" placeholder='Describe your experience..')
        textarea#star(cols='30' name='star' placeholder='Describe your experience..' style='display: none;')
      .btn
        button(type='submit') Post
script(src='./javascripts/recensione.js')
